{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "framework": "create-react-app",
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "api/index.js"
    },
    {
      "source": "/static/(.*)",
      "destination": "build/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "build/index.html"
    }
  ]
}